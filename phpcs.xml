<?xml version="1.0"?>
<ruleset name="Potter Throwable Standard" namespace="Potter\Throwable">

 <description>Potter Throwable Standard</description>
  
 <file>./Potter/Throwable</file>
  
 <arg name="extensions" value="php" />
 <arg name="report" value="summary"/>
 <arg name="colors"/>
 <arg value="sp"/>
 <ini name="memory_limit" value="64M"/>
  
 <autoload>/vendor/autoload.php</autoload>
  
 <rule ref="PEAR"/>
 <rule ref="PSR2"/>
 <rule ref="Squiz"/>
 <rule ref="Generic"/>
 <rule ref="PSR1"/>
  
</ruleset>
